    "version": "0.2.0",
    "configurations": [

        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Listen for XDebug (CLI)",
            "type": "php",
            "request": "launch",
            "port": 9001
        },
        {
            "name": "Run cron.php",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/../../cron.php",
            "port": 9001
        },
        {
            "name": "Debug Unittests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/vendor/phpunit/phpunit/phpunit",
            "args": ["-c", "phpunit.xml"],
            "cwd": "${workspaceRoot}",
            "port": 9001
        },
        {
            "name": "Debug Integrationtests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/vendor/phpunit/phpunit/phpunit",
            "args": ["-c", "phpunit.integration.xml"],
            "cwd": "${workspaceRoot}",
            "port": 9001
        }
    ]
}