    "version": "0.2.0",
    "configurations": [

        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Listen for XDebug (CLI)",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Run cron.php",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/../../cron.php",
            "port": 9003
        },
        {
            "name": "Debug Unittests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/vendor/phpunit/phpunit/phpunit",
            "args": ["-c", "phpunit.xml"],
            "cwd": "${workspaceRoot}",
            "port": 9003
        },
        {
            "name": "Debug Integrationtests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/vendor/phpunit/phpunit/phpunit",
            "args": ["-c", "phpunit.integration.xml"],
            "cwd": "${workspaceRoot}",
            "port": 9003
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug VUE Unit Test (current file)",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "run-script",
              "test:debug",
              "${file}"
            ],
            "port": 9229
        }
    ]
}